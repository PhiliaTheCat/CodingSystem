#ifndef __INCLUDE_MAIN_MENU__
#define __INCLUDE_MAIN_MENU__

const int DECISION_INVALID_DEFAULT = -1;
const int DECISION_INVALID_NUMBER_EXCEEDED = -2;

const int DECISION_ENCRYPTION = 0;
const int DECISION_DECRYPTION = 1;
const int DECISION_LOGS = 2;
const int DECISION_SETTINGS = 3;
const int DECISION_EXIT = 4;

// Get User's option
int Make_Decision();

inline bool Decision_Is_Valid(int &decision)
{
    if (decision >= 0 && decision <= 4)
        return true;
    else if (decision == DECISION_INVALID_DEFAULT)
        return false;
    else 
    {
        decision = DECISION_INVALID_NUMBER_EXCEEDED;
        return false;
    }
}

#endif
