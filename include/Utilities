#ifndef __INCLUDED_CRYPTOLOGY__
#define __INCLUDED_CRYPTOLOGY__

// String Processing
void removeInvalid(char str[]);

inline void capitalize(char str[])
{
    int i = 0;
    while (str[i] != 0)
    {
        if (str[i] >= 'a' && str[i] <= 'z')
            str[i] -= 32;
        i += 1;
    }
}

void removeReplication(char str[]);

// Confirmation
bool denyStr(int branch);

// Key Completion
void completeKey(char key[]);

#endif
